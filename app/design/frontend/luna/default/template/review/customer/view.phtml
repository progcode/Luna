<?php if($this->getProductData()->getId()): ?>
<div class="product-review">
    <div class="page-title">
        <h1><?php echo $this->__('Review Details') ?></h1>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
            <div class="product-img-box">
                <a href="<?php echo $this->getProductData()->getProductUrl() ?>" title="<?php echo $this->escapeHtml($this->getProductData()->getName()) ?>" class="product-image">
                    <img class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProductData(), 'small_image')->resize(500); ?>" alt="<?php echo $this->escapeHtml($this->getProductData()->getName()) ?>" />
                </a>
            </div>
            <div class="product-review-summery-box">
                <?php if( $this->getRating() && $this->getRating()->getSize()): ?>
                    <p class="label"><?php echo $this->__('Average Customer Rating:') ?></p>
                    <?php echo $this->getReviewsSummaryHtml($this->getProductData()) ?>
                <?php endif; ?>
            </div>
        </div>
        <div class="product-details col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <h2 class="product-name"><?php echo $this->escapeHtml($this->getProductData()->getName()) ?></h2>
            <?php if( $this->getRating() && $this->getRating()->getSize()): ?>
            <table class="ratings-table">
            <?php foreach ($this->getRating() as $_rating): ?>
            <?php if($_rating->getPercent()): ?>
                <tr>
                    <th><?php echo $this->escapeHtml($_rating->getRatingCode()) ?></th>
                    <td>
                        <div class="rating-box">
                            <div class="rating" style="width:<?php echo ceil($_rating->getPercent()) ?>%;"></div>
                        </div>
                    </td>
                </tr>
            <?php endif; ?>
            <?php endforeach; ?>
            </table>
            <?php endif; ?>
            <dl class="ratings-description">
                <dt>
                    <?php if ($this->isReviewOwner()): ?>
                        <?php echo $this->__('Your Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
                    <?php else :?>
                        <?php echo $this->__('Review (submitted on %s):', $this->dateFormat($this->getReviewData()->getCreatedAt())) ?>
                    <?php endif;?>
                </dt>
                <dd>
                    <?php echo nl2br($this->escapeHtml($this->getReviewData()->getDetail())) ?>
                </dd>
            </dl>
        </div>
    </div>
    <div class="buttons-set">
        <p class="back-link"><a class="link-back" href="<?php echo $this->getBackUrl() ?>"><i class="fa fa-long-arrow-left"></i> <?php echo $this->__('Back to My Reviews') ?></a></p>
    </div>
</div>
<?php endif; ?>
